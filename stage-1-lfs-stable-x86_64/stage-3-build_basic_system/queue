# устанавливаем утилиту 'removepkg' от пользователя root
cp -v removepkg /mnt/lfs/usr/sbin/
chown root:root /mnt/lfs/usr/sbin/removepkg
chmod 744       /mnt/lfs/usr/sbin/removepkg

